{{#if user}}
<p>You are logged in..</p>
{{else}}
<div class="row">
    <div class="col-md-4">
        <h1 class="head" style="text-align: center;">The love you seek is seeking you.</h1>
        <br>


        <form class="col-md-12" action="/login" method="POST">

        <h1 class="center">
            <a href="/auth/facebook">
                <button type="button" class="btn btn-primary btn-lg">Login with Facebook</button>
            </a>
        </h1>
        <h1 class="center">
            <a href="/auth/google">
                <button type="button" class="btn btn-danger btn-lg">Login with Google</button>
            </a>
        </h1>
        <p class="center">or</p>

            {{#each success}}
            <p class="green">{{text}}</p>
            {{/each}}
            {{#each errors}}
            <p class="red">{{text}}</p>
            {{/each}}
            <div class="form-group">
                <label for="email" >Email</label>
                <input type="text" name="email" id="email" class="form-control center">
            </div>
            <div class="form-group">
                <label for="password" >Password</label>
                <input type="password" name="password" id="password" class="form-control center">
            </div>
            <br>
            <div class="center column" >
            <button type="submit" class="btn btn-primary">Login</button>
            <br>
            <a href="/newAccount">Need Account?</a>
            </div>
        </form>
    </div>
</div>

{{/if}}